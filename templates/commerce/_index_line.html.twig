<div class="card mb-3">

    {% if commerce.imageName %}
        <a href="{{ path('acecommerce_commerce_show', { 'id': commerce.id }) }}">
            <img class="card-img-top img-fluid"
                 src="{{ vich_uploader_asset(commerce, 'imageFile') | imagine_filter('acecommerce_291_200') }}"
                 alt="{{ commerce.nom }}" title="Produits du commerce"/>
        </a>
    {% endif %}

    <div class="card-body">
        <h5 class="card-title text-center text-success"><strong>{{ commerce }}</strong></h5>
        <!--Text-->
        <p class="card-text">
            {% if fiche %}
                <span itemprop="email" content="+32 (0)84 31 52 04">{{ fiche.email }}</span>
                {% if  fiche.website %}
                    <br/>
                    <span itemprop="website" content="+32 (0)84 31 52 04">{{ fiche.website }}</span>
                {% endif %}
                {% if fiche.telephone %}
                    <br/>
                    <span itemprop="telephone" content="+32 (0)84 31 52 04">{{ fiche.telephone }}</span>
                {% endif %}
                {% if fiche.gsm %}
                    <br/>
                    <span itemprop="telephone" content="+32 (0)84 31 52 04">{{ fiche.gsm }}</span>
                {% endif %}
            {% endif %}
        </p>

        <a href="{{ path('acecommerce_commerce_show', {'id': commerce.id}) }}" class="btn btn-outline-info btn-md">
            Consulter ses {{ commerce.produits | length }} produits</a>
    </div>
    <div class="card-footer text-muted">
        {% if fiche %}
            <span itemprop="streetAddress">{{ fiche.rue }} {{ fiche.numero }}</span><br/>
            <span itemprop="postalCode">{{ fiche.cp }}</span>
            <span itemprop="addressLocality">{{ fiche.localite }}</span>
        {% endif %}
    </div>
</div>