<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Mot de passe oublié</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    Entrez votre adresse mail et un courrier pour retrouver votre compte vous sera envoyé
                </div>
                {{ form_start(form_lost) }}
                {{ form_errors(form_lost) }}
                {{ form_row(form_lost.email) }}
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Annuler</button>
                </div>
                {{ form_row(form_lost.submit) }}
                {{ form_end(form_lost) }}
            </div>
        </div>
    </div>
</div>
